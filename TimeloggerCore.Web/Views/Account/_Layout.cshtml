@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

@if(User.Identity.IsAuthenticated)
{
    <h2>Manage your account</h2>
}
<div>
    @if(User.Identity.IsAuthenticated)
    {
        <h4>Change your account settings</h4>
    }
    <hr />
    <div class="row">
        @if(User.Identity.IsAuthenticated)
        {
            <div class="col-md-3">
                @await Html.PartialAsync("_ManageNav")
            </div>
        }
        <div class="col-md-9">
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}

