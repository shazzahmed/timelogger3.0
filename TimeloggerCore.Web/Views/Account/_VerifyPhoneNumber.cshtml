@model VerifyPhoneNumberViewModel

<form asp-action="VerifyPhoneNumber"
      data-ajax="true"
      data-ajax-method="POST"
      data-ajax-mode="replace"
      data-ajax-update="#ajaxresult2">

    <div id="ajaxresult2">
        @Html.Hidden("phoneNumber", @Model.PhoneNumber)
        <h4>Enter verification code</h4>
        <h5>@ViewBag.Status</h5>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="@Model.Code"></label>
            <input asp-for="@Model.Code" class="form-control" />
            <span asp-validation-for="@Model.Code" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-default">Save</button>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}